				<SocialPill href="">
					
			    	<InstagramIcon  class="size-4 md:size-6" />
						Instagram

				</SocialPill>
				<SocialPill href="">
					
			    	<MailIcon  class="size-4 lg:size-6" />
						julian.9911@hotmail.com

				</SocialPill>

			</nav>
		</SectionContainer>
	<SectionContainer id="experiencia">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center x-3">
			<BriefCase class="size-7" />
			Experiencia laboral</h2>
		
		<Experience />
	</SectionContainer>

	<SectionContainer id="proyectos">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center x-3">
			<CodeIcon class="size-7" />
