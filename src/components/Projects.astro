---
import AstroIcon from './icons/AstroIcon.astro'
import JavaScriptIcon from './icons/JavaScriptIcon.astro'
import NodejsIcon from './icons/NodeJsIcon.astro'
import SupaBaseIcon from './icons/SupaBaseIcon.astro'
import TailwindIcon from './icons/TailwindIcon.astro'
import WordpressIcon from './icons/WordpressIcon.astro'

const TAGS = {
    ASTRO: {
        name: "Astro",
        class: "bg-black text white",
        icon: AstroIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-black text white",
        icon: TailwindIcon,
    },
    WORDPRESS: {
        name: " WordPress",
        class: "bg-black text white",
        icon: WordpressIcon,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-black text white",
        icon: JavaScriptIcon,
    },
    NODEJS: {
        name: "Nodejs",
        class: "bg-black text white",
        icon:  NodejsIcon,
    },
    SUPABASE: {
        name: "Supabase",
        class: "bg-black text white",
        icon: SupaBaseIcon,
    }
}
const PROJECTS = [
    {
        title: 'Pagina Web de Hotel Ubicado en Yopal, Casanare',
        description: 'Pagina creada con Astro una de las mejores tecnologias tanto en rendimiento y optimizacion.',
        link: '#',
        github: '#',
        image: '/projects/svgl.png',
        tags: [TAGS.ASTRO, TAGS.TAILWIND,  TAGS.JAVASCRIPT, ]
    },

    {
        title: 'Pagina Web de Abogados',
        description: 'Pagina creada con Astro una de las mejores tecnologias tanto en rendimiento y optimizacion.',
        link: '#',
        github: '#',
        image: '/projects/abogado.png',
        tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.JAVASCRIPT, ]
    },
    {
        title: 'Pagina Web de una tienda naturista ',
        description: 'Pagina creada con WordPress una de los mejores cms tanto en control, rendimiento y optimizacion.',
        link: '#',
        github: '#',
        image: '/projects/tuesencia.png',
        tags: [TAGS.WORDPRESS, TAGS.TAILWIND, ]
    },
    {
        title: 'Aplicacion Gestion de Bar ',
        description: 'Aplicacion creada con NodeJs y SupaBase para poder llevar el control de las ventas que se hacen en un bar.',
        link: '#',
        github: '#',
        image: '/projects/appBar.png',
        tags: [TAGS.NODEJS, TAGS.TAILWIND, TAGS.SUPABASE, ]
    }
    
]
---

{
    PROJECTS.map(({ image, title, description, tags}) =>(
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2 my-6 ">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) =>(
                    <li>
                    <span class={` flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                    <tag.icon/>

                    {tag.name}
                    </span>
                    </li>
                    
                ))} 
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
    ))
}