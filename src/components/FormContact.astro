<script type="module" is:inline>
  // Script cliente: comprobaciones con instanceof para evitar errores TS
  (function () {
    const formEl = document.getElementById('contactForm');
    if (!(formEl instanceof HTMLFormElement)) return; // evita "posiblemente null"

    const statusEl = document.getElementById('formStatus'); 
    const submitBtn = document.getElementById('submitBtn');

    formEl.addEventListener('submit', async (e) => {
      e.preventDefault();

      // seguridad: aseguramos que formEl sigue siendo HTMLFormElement
      if (!(formEl instanceof HTMLFormElement)) return;

      if (statusEl instanceof HTMLElement) {
        statusEl.textContent = 'Enviando...';
        statusEl.className = 'mt-4 text-sm text-center text-slate-300';
      }

      // deshabilitar botón mientras se envía
      if (submitBtn instanceof HTMLButtonElement) {
        submitBtn.disabled = true;
        submitBtn.setAttribute('aria-busy', 'true');
      }

      const data = new FormData(formEl);

      try {
        const res = await fetch('https://formspree.io/f/mkgzyneb', {
          method: 'POST',
          body: data,
          headers: { 'Accept': 'application/json' },
        });

        if (res.ok) {
          if (statusEl instanceof HTMLElement) {
            statusEl.textContent = '✅ ¡Mensaje enviado con éxito!';
            statusEl.className = 'mt-4 text-sm text-center text-green-400';
          }
          formEl.reset(); 
        } else {
          // intentamos leer mensaje de error de Formspree (si viene)
          let msg = '❌ Hubo un error al enviar el mensaje.';
          try {
            const json = await res.json();
            if (json?.errors?.length) {
              msg = json.errors.map(err => err.message || '').join(', ');
            }
          } catch (err) { /* noop */ }

          if (statusEl instanceof HTMLElement) {
            statusEl.textContent = msg;
            statusEl.className = 'mt-4 text-sm text-center text-red-400';
          }
        }
      } catch (err) {
        if (statusEl instanceof HTMLElement) {
          statusEl.textContent = '⚠️ No se pudo enviar. Revisa tu conexión.';
          statusEl.className = 'mt-4 text-sm text-center text-yellow-400';
        }
      } finally {
        if (submitBtn instanceof HTMLButtonElement) {
          submitBtn.disabled = false;
          submitBtn.removeAttribute('aria-busy');
        }
      }
    });
  })();
