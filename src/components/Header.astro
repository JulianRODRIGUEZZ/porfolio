
<header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-colors duration-300 bg-transparent">
  <div class="flex items-center justify-between max-w-[1120px] mx-auto w-full px-6 py-5">
    <!-- Logo -->
    <a href="#top" class="text-white font-bold text-lg">Julian-Technosis</a>

    <!-- Menú escritorio -->
    <nav class="hidden md:flex gap-x-10 text-white opacity-80">
      <a href="#top" class="hover:text-blue-400 transition">Inicio</a>
      <a href="#experiencia" class="hover:text-blue-400 transition">Experiencia</a>
      <a href="#proyectos" class="hover:text-blue-400 transition">Proyectos</a>
      <a href="#sobre-mi" class="hover:text-blue-400 transition">Sobre mi</a>
      <a href="#formcontact" class="hover:text-blue-400 transition">Contacto</a>
    </nav>

    <!-- Botón hamburguesa (móvil) -->
    <button
      id="menu-btn"
      aria-controls="mobile-menu"
      aria-expanded="false"
      class="md:hidden text-white focus:outline-none"
      aria-label="Abrir menú"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Menú móvil (sin flex al inicio) -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 right-0 bg-black bg-opacity-80 flex-col items-center py-4">
    <a href="#top" class="py-2 text-white hover:text-blue-400">Inicio</a>
    <a href="#experiencia" class="py-2 text-white hover:text-blue-400">Experiencia</a>
    <a href="#proyectos" class="py-2 text-white hover:text-blue-400">Proyectos</a>
    <a href="#sobre-mi" class="py-2 text-white hover:text-blue-400">Sobre mi</a>
    <a href="#formcontact" class="py-2 text-white hover:text-blue-400">Contacto</a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const header = document.getElementById('main-header');

      if (!(btn instanceof HTMLElement) || !(mobileMenu instanceof HTMLElement) || !(header instanceof HTMLElement)) return;

      // Abrir/cerrar menú móvil sin conflicto hidden/flex
      btn.addEventListener('click', () => {
        const isOpen = mobileMenu.classList.contains('flex');
        if (isOpen) {
          mobileMenu.classList.remove('flex');
          mobileMenu.classList.add('hidden');
        } else {
          mobileMenu.classList.remove('hidden');
          mobileMenu.classList.add('flex');
        }
        btn.setAttribute('aria-expanded', String(!isOpen));
      });

      // Cerrar menú móvil al hacer click en un enlace
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.remove('flex');
          mobileMenu.classList.add('hidden');
          btn.setAttribute('aria-expanded', 'false');
        });
      });

      // Cambiar color del header al hacer scroll
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.classList.remove('bg-transparent');
          header.classList.add('bg-black', 'bg-opacity-90');
        } else {
          header.classList.remove('bg-black', 'bg-opacity-90');
          header.classList.add('bg-transparent');
        }
      });
    });
  </script>
</header>
